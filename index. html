        // DOM Elements
        const categoryGrid = document.getElementById('categoryGrid');
        const subcategoryContainer = document.getElementById('subcategoryContainer');
        const subcategoryGrid = document.getElementById('subcategoryGrid');
        const skillsContainer = document.getElementById('skillsContainer');
        const skillsGrid = document.getElementById('skillsGrid');
        const progressBar = document.getElementById('progress');
        
        // Form Steps
        const step1 = document.getElementById('step1');
        const step2 = document.getElementById('step2');
        const step3 = document.getElementById('step3');
        const successMessage = document.getElementById('successMessage');
        
        // Navigation Buttons
        const nextToStep2 = document.getElementById('nextToStep2');
        const nextToStep3 = document.getElementById('nextToStep3');
        const backToStep1 = document.getElementById('backToStep1');
        const backToStep2 = document.getElementById('backToStep2');
        const submitService = document.getElementById('submitService');
        
        // Upload Elements
        const portfolioUpload = document.getElementById('portfolioUpload');
        const portfolioInput = document.getElementById('portfolioInput');
        const portfolioPreview = document.getElementById('portfolioPreview');
        const uploadProfileBtn = document.getElementById('uploadProfileBtn');
        const profileInput = document.getElementById('profileInput');
        const profilePhotoPreview = document.getElementById('profilePhotoPreview');
        
        // Review Elements
        const reviewCategory = document.getElementById('reviewCategory');
        const reviewSubcategory = document.getElementById('reviewSubcategory');
        const reviewSkills = document.getElementById('reviewSkills');
        const reviewName = document.getElementById('reviewName');
        const reviewMobile = document.getElementById('reviewMobile');
        const reviewWhatsapp = document.getElementById('reviewWhatsapp');
        const reviewPrivacy = document.getElementById('reviewPrivacy');
        const reviewAddress = document.getElementById('reviewAddress');
        const reviewArea = document.getElementById('reviewArea');
        const reviewPortfolio = document.getElementById('reviewPortfolio');
        const portfolioReviewCard = document.getElementById('portfolioReviewCard');
        
        // Form Data Storage
        let formData = {
            category: null,
            subcategory: null,
            skills: [],
            profile: {
                name: '',
                mobile: '',
                whatsapp: '',
                hideMobile: false,
                hideWhatsapp: false,
                address: '',
                serviceArea: '',
                portfolioPhotos: [],
                profilePhoto: null
            }
        };

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            // Populate categories
            populateCategories();
            
            // Set up event listeners
            setupEventListeners();
        });

        function populateCategories() {
            serviceData.categories.forEach(category => {
                const categoryCard = document.createElement('div');
                categoryCard.className = 'category-card';
                categoryCard.dataset.id = category.id;
                categoryCard.innerHTML = `
                    <div class="category-icon">
                        <i class="${category.icon}"></i>
                    </div>
                    <h3>${category.name}</h3>
                `;
                categoryGrid.appendChild(categoryCard);
            });
        }

        function setupEventListeners() {
            // Category selection
            categoryGrid.addEventListener('click', function(e) {
                const categoryCard = e.target.closest('.category-card');
                if (categoryCard) {
                    // Remove selection from all categories
                    document.querySelectorAll('.category-card').forEach(card => {
                        card.classList.remove('selected');
                    });
                    
                    // Select clicked category
                    categoryCard.classList.add('selected');
                    
                    const categoryId = parseInt(categoryCard.dataset.id);
                    const category = serviceData.categories.find(cat => cat.id === categoryId);
                    
                    formData.category = category;
                    
                    // Show subcategories
                    populateSubcategories(category);
                    subcategoryContainer.style.display = 'block';
                    skillsContainer.style.display = 'none';
                    
                    // Add animation
                    subcategoryContainer.style.animation = 'none';
                    setTimeout(() => {
                        subcategoryContainer.style.animation = 'slideDown 0.3s ease-out';
                    }, 10);
                }
            });
            
            // Subcategory selection
            subcategoryGrid.addEventListener('click', function(e) {
                const subcategoryCard = e.target.closest('.subcategory-card');
                if (subcategoryCard) {
                    // Remove selection from all subcategories
                    document.querySelectorAll('.subcategory-card').forEach(card => {
                        card.classList.remove('selected');
                    });
                    
                    // Select clicked subcategory
                    subcategoryCard.classList.add('selected');
                    
                    const subcategoryId = parseInt(subcategoryCard.dataset.id);
                    const subcategory = formData.category.subcategories.find(sub => sub.id === subcategoryId);
                    
                    formData.subcategory = subcategory;
                    
                    // Show skills
                    populateSkills(subcategory);
                    skillsContainer.style.display = 'block';
                    
                    // Add animation
                    skillsContainer.style.animation = 'none';
                    setTimeout(() => {
                        skillsContainer.style.animation = 'slideDown 0.3s ease-out';
                    }, 10);
                }
            });
            
            // Skill selection
            skillsGrid.addEventListener('click', function(e) {
                const skillItem = e.target.closest('.skill-item');
                if (skillItem) {
                    skillItem.classList.toggle('selected');
                    
                    const skillName = skillItem.dataset.skill;
                    const priceInput = skillItem.querySelector('.price-input');
                    
                    if (skillItem.classList.contains('selected')) {
                        formData.skills.push({
                            name: skillName,
                            price: priceInput.value
                        });
                    } else {
                        formData.skills = formData.skills.filter(s => s.name !== skillName);
                        priceInput.value = '';
                    }
                }
            });
            
            // Price input changes
            skillsGrid.addEventListener('input', function(e) {
                if (e.target.classList.contains('price-input')) {
                    const skillItem = e.target.closest('.skill-item');
                    const skillName = skillItem.dataset.skill;
                    
                    const skillIndex = formData.skills.findIndex(s => s.name === skillName);
                    if (skillIndex !== -1) {
                        formData.skills[skillIndex].price = e.target.value;
                    }
                }
            });
            
            // Same as mobile checkbox
            document.getElementById('sameAsMobile').addEventListener('change', function() {
                const whatsappField = document.getElementById('whatsapp');
                if (this.checked) {
                    whatsappField.value = document.getElementById('mobile').value;
                    whatsappField.disabled = true;
                } else {
                    whatsappField.disabled = false;
                }
            });
            
            // Privacy checkboxes
            document.getElementById('hideMobile').addEventListener('change', function() {
                formData.profile.hideMobile = this.checked;
            });
            
            document.getElementById('hideWhatsapp').addEventListener('change', function() {
                formData.profile.hideWhatsapp = this.checked;
            });
            
            // Area options
            document.querySelectorAll('.area-option').forEach(option => {
                option.addEventListener('click', function() {
                    document.querySelectorAll('.area-option').forEach(opt => {
                        opt.classList.remove('selected');
                    });
                    this.classList.add('selected');
                    formData.profile.serviceArea = this.dataset.value;
                });
            });
            
            // Portfolio upload
            portfolioUpload.addEventListener('click', function() {
                portfolioInput.click();
            });
            
            portfolioInput.addEventListener('change', function(e) {
                handlePortfolioUpload(e.target.files);
            });
            
            // Profile photo upload
            uploadProfileBtn.addEventListener('click', function() {
                profileInput.click();
            });
            
            profileInput.addEventListener('change', function(e) {
                handleProfileUpload(e.target.files[0]);
            });
            
            // Allow drag and drop for portfolio
            portfolioUpload.addEventListener('dragover', function(e) {
                e.preventDefault();
                portfolioUpload.style.borderColor = '#059669';
                portfolioUpload.style.background = '#f0fdf4';
            });
            
            portfolioUpload.addEventListener('dragleave', function() {
                portfolioUpload.style.borderColor = '#e2e8f0';
                portfolioUpload.style.background = 'white';
            });
            
            portfolioUpload.addEventListener('drop', function(e) {
                e.preventDefault();
                portfolioUpload.style.borderColor = '#e2e8f0';
                portfolioUpload.style.background = 'white';
                handlePortfolioUpload(e.dataTransfer.files);
            });
            
            // Navigation
            nextToStep2.addEventListener('click', function() {
                if (validateStep1()) {
                    step1.classList.remove('active');
                    step2.classList.add('active');
                    progressBar.style.width = '66.66%';
                }
            });
            
            nextToStep3.addEventListener('click', function() {
                if (validateStep2()) {
                    updateFormData();
                    populateReview();
                    step2.classList.remove('active');
                    step3.classList.add('active');
                    progressBar.style.width = '100%';
                }
            });
            
            backToStep1.addEventListener('click', function() {
                step2.classList.remove('active');
                step1.classList.add('active');
                progressBar.style.width = '33.33%';
            });
            
            backToStep2.addEventListener('click', function() {
                step3.classList.remove('active');
                step2.classList.add('active');
                progressBar.style.width = '66.66%';
            });
            
            submitService.addEventListener('click', function() {
                if (validateStep3()) {
                    // In a real application, you would submit the form data to a server here
                    step3.style.display = 'none';
                    successMessage.style.display = 'block';
                    
                    // Redirect after a delay
                    setTimeout(function() {
                        // window.location.href = 'dashboard.html';
                    }, 3000);
                }
            });
        }

        function populateSubcategories(category) {
            subcategoryGrid.innerHTML = '';
            category.subcategories.forEach(subcategory => {
                const subcategoryCard = document.createElement('div');
                subcategoryCard.className = 'subcategory-card';
                subcategoryCard.dataset.id = subcategory.id;
                subcategoryCard.textContent = subcategory.name;
                subcategoryGrid.appendChild(subcategoryCard);
            });
        }

        function populateSkills(subcategory) {
            skillsGrid.innerHTML = '';
            subcategory.skills.forEach(skill => {
                const skillItem = document.createElement('div');
                skillItem.className = 'skill-item';
                skillItem.dataset.skill = skill;
                skillItem.innerHTML = `
                    <input type="checkbox" class="checkbox">
                    <span>${skill}</span>
                    <input type="number" class="price-input" placeholder="Starts at (₹)">
                `;
                skillsGrid.appendChild(skillItem);
            });
        }

        function handlePortfolioUpload(files) {
            if (files.length + formData.profile.portfolioPhotos.length > 10) {
                alert('You can upload a maximum of 10 portfolio images');
                return;
            }
            
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                if (!file.type.match('image.*')) {
                    continue;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    const portfolioItem = document.createElement('div');
                    portfolioItem.className = 'portfolio-item';
                    portfolioItem.innerHTML = `
                        <img src="${e.target.result}" alt="Portfolio image">
                        <button class="remove-btn">&times;</button>
                    `;
                    portfolioPreview.appendChild(portfolioItem);
                    
                    // Add to form data
                    formData.profile.portfolioPhotos.push({
                        file: file,
                        url: e.target.result
                    });
                    
                    // Add remove functionality
                    portfolioItem.querySelector('.remove-btn').addEventListener('click', function() {
                        portfolioItem.remove();
                        const index = formData.profile.portfolioPhotos.findIndex(p => p.url === e.target.result);
                        if (index !== -1) {
                            formData.profile.portfolioPhotos.splice(index, 1);
                        }
                    });
                };
                reader.readAsDataURL(file);
            }
        }

        function handleProfileUpload(file) {
            if (!file.type.match('image.*')) {
                alert('Please select a valid image file');
                return;
            }
            
            const reader = new FileReader();
            reader.onload = function(e) {
                profilePhotoPreview.innerHTML = `<img src="${e.target.result}" alt="Profile photo">`;
                formData.profile.profilePhoto = {
                    file: file,
                    url: e.target.result
                };
            };
            reader.readAsDataURL(file);
        }

        function validateStep1() {
            if (!formData.category) {
                alert('Please select a category');
                return false;
            }
            
            if (!formData.subcategory) {
                alert('Please select a subcategory');
                return false;
            }
            
            if (formData.skills.length === 0) {
                alert('Please select at least one skill');
                return false;
            }
            
            return true;
        }

        function validateStep2() {
            const name = document.getElementById('fullName').value;
            const mobile = document.getElementById('mobile').value;
            const address = document.getElementById('address').value;
            
            if (!name) {
                alert('Please enter your full name');
                return false;
            }
            
            if (!mobile) {
                alert('Please enter your mobile number');
                return false;
            }
            
            if (!address) {
                alert('Please enter your address');
                return false;
            }
            
            if (!formData.profile.serviceArea) {
                alert('Please select your service area');
                return false;
            }
            
            return true;
        }

        function validateStep3() {
            // In a real application, you might do final validation here
            return true;
        }

        function updateFormData() {
            formData.profile.name = document.getElementById('fullName').value;
            formData.profile.mobile = document.getElementById('mobile').value;
            formData.profile.whatsapp = document.getElementById('whatsapp').value;
            formData.profile.address = document.getElementById('address').value;
            formData.profile.hideMobile = document.getElementById('hideMobile').checked;
            formData.profile.hideWhatsapp = document.getElementById('hideWhatsapp').checked;
        }

        function populateReview() {
            // Service Details
            reviewCategory.textContent = formData.category.name;
            reviewSubcategory.textContent = formData.subcategory.name;
            
            reviewSkills.innerHTML = '';
            formData.skills.forEach(skill => {
                const skillBadge = document.createElement('div');
                skillBadge.className = 'skill-badge';
                if (skill.price) {
                    skillBadge.classList.add('with-price');
                    skillBadge.textContent = `${skill.name}${skill.price}`;
                } else {
                    skillBadge.textContent = skill.name;
                }
                reviewSkills.appendChild(skillBadge);
            });
            
            // Profile Information
            reviewName.textContent = formData.profile.name;
            reviewMobile.textContent = formData.profile.hideMobile ? 'Hidden' : formData.profile.mobile;
            reviewWhatsapp.textContent = formData.profile.hideWhatsapp ? 'Hidden' : formData.profile.whatsapp;
            
            const privacySettings = [];
            if (formData.profile.hideMobile) privacySettings.push('Mobile Hidden');
            if (formData.profile.hideWhatsapp) privacySettings.push('WhatsApp Hidden');
            reviewPrivacy.textContent = privacySettings.length > 0 ? privacySettings.join(', ') : 'All visible';
            
            // Service Area
            reviewAddress.textContent = formData.profile.address;
            reviewArea.textContent = formData.profile.serviceArea;
            
            // Portfolio
            reviewPortfolio.innerHTML = '';
            if (formData.profile.portfolioPhotos.length > 0) {
                portfolioReviewCard.style.display = 'block';
                formData.profile.portfolioPhotos.forEach(photo => {
                    const portfolioItem = document.createElement('div');
                    portfolioItem.className = 'portfolio-item';
                    portfolioItem.innerHTML = `<img src="${photo.url}" alt="Portfolio image">`;
                    reviewPortfolio.appendChild(portfolioItem);
                });
            } else {
                portfolioReviewCard.style.display = 'none';
            }
        }
    </script>
</body>
</html>
